  link(rel='stylesheet' href='css/form.css')


body
    .container-md
        .formDesign
            p.formtitle Vacation Package Registration Form
                form.form.group(action='/add' method="POST")
                    .row.rowmarg
                        .col
                        label.formlabel(for='PkgName') Package Name:
                        input#PkgName.form-control(type='text' name="PkgName" placeholder='Package Name' autocomplete='off' required='')
                        .col
                        label.formlabel(for='PkgBasePrice') Package Price:
                        input#PkgBasePrice.form-control(type='num' name="PkgBasePrice" placeholder='Package Price' autocomplete='off' required='')
                    .row.rowmarg
                        .col
                        label.formlabel(for='PkgStartDate') Package Start Date:
                        input#PkgStartDate.form-control(type='date' name="PkgStartDate" placeholder='Package Start Date' autocomplete='off' min='datetime-local' required='')
                        .col
                        label.formlabel(for='PkgEndDate') Package End Date:
                        input#PkgEndDate.form-control(type='date' name="PkgEndDate" placeholder='Package End Date'  autocomplete='off' min='datetime-local' required='')
                    .row.rowmarg
                        .col
                        label.formlabel(for='Img') Image Link (Small Image):
                        input#Img.form-control(type='text' name="Img" placeholder='/images/pkgs/filename.png'  autocomplete='off' value='/images/pkgs/')
                        .col
                        label.formlabel(for='ImgLg') Image Link (Large Image)
                        input#ImgLg.form-control(type='text' name="ImgLg" placeholder='/images/pkgs/filename.png'  autocomplete='off' value='/images/pkgs/')
                    .row.rowmarg
                        .col
                        label.formlabel(for='PkgDesc') Package Summary:
                        textarea#PkgDesc.form-control(type='text' name="PkgDesc" placeholder='Package Description'  autocomplete='off' required='')
                        .col
                        label.formlabel(for='DetPkgDesc') Package Description
                        textarea#DetPkgDesc.form-control(type='text' name="DetPkgDesc" placeholder='Detailed Package Description'  autocomplete='off' required='')
                    .row.rowmarg
                        button.formbuttons(type='reset' value='Reset') Reset
                        button.formbuttons(type='submit' value='Submit') Submit
extends layout

block othlink
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l' crossorigin='anonymous')
  title Travel Packages
  link(rel='stylesheet' href='../css/packages.css')
  script(src='../js/buttons.js')


block content
  .container
    p.titlefont Select From One of Our Exciting Travel Packages!
    each package in packages
      button.row.button.position-relative(type='submit')
        a(class="stretched-link" href='/packages/details/' + package.PackageId)
        .col.colimg
          img.pkgimg(src=package.Img)
        .col.coldesc
          .desc
            p.title #{package.PkgName}
          .desc
            p.desc #{package.PkgDesc}
          .desc
            p.badge.price $#{package.PkgBasePrice}
        
                
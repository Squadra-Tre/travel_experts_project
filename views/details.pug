extends layout

block othlink
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl' crossorigin='anonymous')
  title Travel Packages
  link(rel='stylesheet' href='/css/packages.css')
  script(src='/js/buttons.js')

block content
    .container-md.details
        .row.align-items-center.py-3
            .col
                img.pkgimglg(src=pack.ImgLg)
            .col-sm
                p.fs-1.text-wrap.fw-bold $#{pack.PkgBasePrice}
                p Plus applicable fees and taxes
            .col-sm
                a.btn.btn-primary.btn-lg(href='/users/book/' + pack.PackageId role='button') BOOK
        .row.fs-1.py-3.fw-bold #{pack.PkgName}
        .row.text-wrap.py-3.fs-3
            p #{pack.PkgDesc}
        .row.text-wrap.py-5.fs-4.fw-bold
            p From #{pack.PkgStartDate} 
            p To #{pack.PkgEndDate}